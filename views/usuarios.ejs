<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios - CineApp</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            color: #2c3e50;
            margin: 0;
            font-size: 2.5em;
        }
        .actions {
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            margin-bottom: 30px;
            text-align: center;
        }
        .btn {
            background: #3498db;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 5px;
            font-size: 1em;
            transition: background 0.3s ease;
        }
        .btn:hover {
            background: #2980b9;
        }
        .btn-success {
            background: #27ae60;
        }
        .btn-success:hover {
            background: #229954;
        }
        .btn-danger {
            background: #e74c3c;
        }
        .btn-danger:hover {
            background: #c0392b;
        }
        .usuarios-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .usuario-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            transition: transform 0.3s ease;
        }
        .usuario-card:hover {
            transform: translateY(-5px);
        }
        .usuario-title {
            color: #2c3e50;
            font-size: 1.3em;
            font-weight: bold;
            margin: 0 0 10px 0;
        }
        .usuario-info {
            color: #7f8c8d;
            margin: 5px 0;
        }
        .usuario-info strong {
            color: #34495e;
        }
        .usuario-actions {
            margin-top: 15px;
            text-align: center;
        }
        .loading {
            text-align: center;
            color: white;
            font-size: 1.2em;
            padding: 40px;
        }
        .error {
            background: #e74c3c;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            margin: 20px 0;
        }
        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.9);
            color: #2c3e50;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
        }
        .status-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
            text-transform: uppercase;
        }
        .status-activo {
            background: #d5f4e6;
            color: #27ae60;
        }
        .status-inactivo {
            background: #fadbd8;
            color: #e74c3c;
        }
        .tipo-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
            text-transform: uppercase;
            margin-left: 10px;
        }
        .tipo-cliente {
            background: #e3f2fd;
            color: #1976d2;
        }
        .tipo-vip {
            background: #f3e5f5;
            color: #7b1fa2;
        }
        .tipo-admin {
            background: #fff3e0;
            color: #f57c00;
        }
    </style>
</head>
<body>
    <a href="/" class="back-btn">‚Üê Volver al Inicio</a>
    
    <div class="container">
        <div class="header">
            <h1>üë• Usuarios</h1>
            <p>Gestiona los usuarios del sistema de cine</p>
        </div>

        <div class="actions">
            <button class="btn btn-success" onclick="loadUsuarios()">üîÑ Cargar Usuarios</button>
            <a href="/usuarios/agregar" class="btn">‚ûï Agregar Usuario</a>
            <button class="btn" onclick="loadActiveUsuarios()">‚úÖ Solo Activos</button>
        </div>

        <div id="usuariosContainer">
            <div class="loading">
                <p>üîÑ Cargando usuarios...</p>
                <p>Haz clic en "Cargar Usuarios" para ver el cat√°logo</p>
            </div>
        </div>
    </div>

    <script>
    const API_BASE = '/api/usuarios';

        async function loadUsuarios() {
            try {
                const response = await fetch(API_BASE);
                const data = await response.json();
                
                if (data.success) {
                    displayUsuarios(data.data);
                } else {
                    showError('Error al cargar los usuarios: ' + data.message);
                }
            } catch (error) {
                showError('Error de conexi√≥n: ' + error.message);
            }
        }

        async function loadActiveUsuarios() {
            try {
                const response = await fetch(API_BASE + '/activos');
                const data = await response.json();
                
                if (data.success) {
                    displayUsuarios(data.data);
                } else {
                    showError('Error al cargar los usuarios activos: ' + data.message);
                }
            } catch (error) {
                showError('Error de conexi√≥n: ' + error.message);
            }
        }

        function displayUsuarios(usuarios) {
            const container = document.getElementById('usuariosContainer');
            
            if (usuarios.length === 0) {
                container.innerHTML = '<div class="error">No hay usuarios disponibles</div>';
                return;
            }

            container.innerHTML = `
                <div class="usuarios-grid">
                    ${usuarios.map(usuario => {
                        const statusClass = usuario.estado === 'activo' ? 'status-activo' : 'status-inactivo';
                        const tipoClass = `tipo-${usuario.tipoUsuario}`;
                        
                        return `
                        <div class="usuario-card">
                            <h3 class="usuario-title">${usuario.nombre} ${usuario.apellido}</h3>
                            <div class="usuario-info"><strong>Email:</strong> ${usuario.email}</div>
                            <div class="usuario-info"><strong>Tel√©fono:</strong> ${usuario.telefono}</div>
                            <div class="usuario-info"><strong>Fecha de Nacimiento:</strong> ${usuario.fechaNacimiento}</div>
                            <div class="usuario-info"><strong>Puntos:</strong> ${usuario.puntos}</div>
                            <div class="usuario-info">
                                <strong>Estado:</strong> <span class="status-badge ${statusClass}">${usuario.estado}</span>
                                <span class="tipo-badge ${tipoClass}">${usuario.tipoUsuario}</span>
                            </div>
                            <div class="usuario-info"><strong>Registro:</strong> ${usuario.fechaRegistro}</div>
                            <div class="usuario-actions">
                                <a href="/usuarios/${usuario.id}" class="btn">üëÅÔ∏è Ver Detalle</a>
                                <button class="btn" onclick="editUsuario(${usuario.id})">‚úèÔ∏è Editar</button>
                                <button class="btn btn-danger" onclick="deleteUsuario(${usuario.id})">üóëÔ∏è Eliminar</button>
                            </div>
                        </div>
                    `}).join('')}
                </div>
            `;
        }

        function showError(message) {
            const container = document.getElementById('usuariosContainer');
            container.innerHTML = `<div class="error">${message}</div>`;
        }

        async function deleteUsuario(id) {
            if (confirm('¬øEst√°s seguro de que quieres eliminar este usuario?')) {
                try {
                    const response = await fetch(`${API_BASE}/${id}`, {
                        method: 'DELETE'
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Usuario eliminado exitosamente');
                        loadUsuarios(); // Recargar la lista
                    } else {
                        alert('Error al eliminar el usuario: ' + data.message);
                    }
                } catch (error) {
                    alert('Error al eliminar el usuario: ' + error.message);
                }
            }
        }

        function editUsuario(id) {
            alert('Funcionalidad de edici√≥n pendiente de implementar');
        }

        // Cargar usuarios al cargar la p√°gina
        window.onload = function() {
            loadUsuarios();
        };
    </script>
</body>
</html>

