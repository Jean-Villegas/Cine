            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            text-decoration: none;
            color: inherit;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .nav-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }
        .nav-card h3 {
            color: #2c3e50;
            margin: 0 0 15px 0;
            font-size: 1.5em;
        }
        .nav-card p {
            color: #7f8c8d;
            margin: 0;
            line-height: 1.6;
        }
        .stats {
            background: rgba(255, 255, 255, 0.95);
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            margin-bottom: 30px;
        }
        .stats h3 {
            color: #2c3e50;
            margin: 0 0 20px 0;
            text-align: center;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }
        .stat-item {
            text-align: center;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
        }
        .stat-number {
            font-size: 2em;
            font-weight: bold;
            color: #3498db;
            margin-bottom: 5px;
        }
        .stat-label {
            color: #7f8c8d;
            font-size: 0.9em;
        }
        .api-info {
            background: rgba(255, 255, 255, 0.95);
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        .api-info h3 {
            color: #2c3e50;
            margin: 0 0 15px 0;
        }
        .api-endpoints {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
        }
        .endpoint {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #3498db;
        }
        .endpoint-method {
            font-weight: bold;
            color: #e74c3c;
            font-size: 0.9em;
        }
        .endpoint-url {
            color: #2c3e50;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üé¨ CineApp</h1>
            <p>Sistema de Gesti√≥n de Cine</p>
            <p>Bienvenido al sistema completo de gesti√≥n de cine con API REST</p>
        </div>

        <div class="nav-cards">
            <a href="/peliculas" class="nav-card">
                <h3>üé≠ Pel√≠culas</h3>
                <p>Gestiona el cat√°logo de pel√≠culas, directores, g√©neros y toda la informaci√≥n cinematogr√°fica.</p>
            </a>
            
            <a href="/salas" class="nav-card">
                <h3>üè¢ Salas</h3>
                <p>Administra las salas de proyecci√≥n, capacidad, equipamiento y ubicaci√≥n.</p>
            </a>
            
            <a href="/funciones" class="nav-card">
                <h3>‚è∞ Funciones</h3>
                <p>Programa funciones, horarios y asigna pel√≠culas a las salas disponibles.</p>
            </a>
            
            <a href="/usuarios" class="nav-card">
                <h3>üë• Usuarios</h3>
                <p>Gestiona usuarios, clientes VIP, administradores y sistema de puntos.</p>
            </a>
            
            <a href="/boletos" class="nav-card">
                <h3>üé´ Boletos</h3>
                <p>Controla las ventas, reservas, c√≥digos QR y estados de los boletos.</p>
            </a>
        </div>

        <div class="stats">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h3>üìä Estad√≠sticas del Sistema</h3>
                <button onclick="refreshStats()" style="background: #3498db; color: white; border: none; padding: 8px 16px; border-radius: 5px; cursor: pointer; font-size: 0.9em;">
                    üîÑ Actualizar
                </button>
            </div>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-number" id="peliculas-count">-</div>
                    <div class="stat-label">Pel√≠culas Activas</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="salas-count">-</div>
                    <div class="stat-label">Salas Disponibles</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="funciones-count">-</div>
                    <div class="stat-label">Funciones Programadas</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="usuarios-count">-</div>
                    <div class="stat-label">Usuarios Registrados</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="boletos-count">-</div>
                    <div class="stat-label">Boletos Vendidos</div>
                </div>
            </div>
        </div>

        <div class="api-info">
            <h3>üîó API Endpoints Disponibles</h3>
            <div class="api-endpoints">
                <div class="endpoint">
                    <div class="endpoint-method">GET</div>
                    <div class="endpoint-url">/api/peliculas</div>
                </div>
                <div class="endpoint">
                    <div class="endpoint-method">GET</div>
                    <div class="endpoint-url">/api/salas</div>
                </div>
                <div class="endpoint">
                    <div class="endpoint-method">GET</div>
                    <div class="endpoint-url">/api/funciones</div>
                </div>
                <div class="endpoint">
                    <div class="endpoint-method">GET</div>
                    <div class="endpoint-url">/api/usuarios</div>
                </div>
                <div class="endpoint">
                    <div class="endpoint-method">GET</div>
                    <div class="endpoint-url">/api/boletos</div>
                </div>
            </div>
            <p style="margin-top: 15px; color: #7f8c8d; font-size: 0.9em;">
                üí° Usa Thunder Client o Postman para probar todos los endpoints de la API
            </p>
        </div>
    </div>

    <script>
        // Funci√≥n para cargar estad√≠sticas din√°micamente
        async function loadStats() {
            try {
                // Cargar pel√≠culas activas
                const peliculasResponse = await fetch('/api/peliculas/activas');
                const peliculasData = await peliculasResponse.json();
                if (peliculasData.success) {
                    document.getElementById('peliculas-count').textContent = peliculasData.data.length;
                }

                // Cargar salas activas
                const salasResponse = await fetch('/api/salas/activas');
                const salasData = await salasResponse.json();
                if (salasData.success) {
                    document.getElementById('salas-count').textContent = salasData.data.length;
                }

                // Cargar funciones
                const funcionesResponse = await fetch('/api/funciones');
                const funcionesData = await funcionesResponse.json();
                if (funcionesData.success) {
                    document.getElementById('funciones-count').textContent = funcionesData.data.length;
                }

                // Cargar usuarios activos
                const usuariosResponse = await fetch('/api/usuarios/activos');
                const usuariosData = await usuariosResponse.json();
                if (usuariosData.success) {
                    document.getElementById('usuarios-count').textContent = usuariosData.data.length;
                }

                // Cargar boletos
                const boletosResponse = await fetch('/api/boletos');
                const boletosData = await boletosResponse.json();
                if (boletosData.success) {
                    document.getElementById('boletos-count').textContent = boletosData.data.length;
                }

            } catch (error) {
                console.error('Error al cargar estad√≠sticas:', error);
                // Mostrar valores por defecto en caso de error
                document.getElementById('peliculas-count').textContent = 'Error';
                document.getElementById('salas-count').textContent = 'Error';
                document.getElementById('funciones-count').textContent = 'Error';
                document.getElementById('usuarios-count').textContent = 'Error';
                document.getElementById('boletos-count').textContent = 'Error';
            }
        }

        // Cargar estad√≠sticas al cargar la p√°gina
        window.onload = function() {
            loadStats();
            
            // Actualizar estad√≠sticas cada 30 segundos
            setInterval(loadStats, 30000);
        };

        // Funci√≥n para actualizar estad√≠sticas manualmente
        function refreshStats() {
            document.getElementById('peliculas-count').textContent = '-';
            document.getElementById('salas-count').textContent = '-';
            document.getElementById('funciones-count').textContent = '-';
            document.getElementById('usuarios-count').textContent = '-';
            document.getElementById('boletos-count').textContent = '-';
            
            loadStats();
        }
    </script>
</body>
</html>