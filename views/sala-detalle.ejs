<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Sala - CineApp</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            color: #2c3e50;
            margin: 0;
            font-size: 2.5em;
        }
        .detail-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
        }
        .detail-section {
            margin-bottom: 25px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            border-left: 4px solid #3498db;
        }
        .detail-section h3 {
            color: #2c3e50;
            margin: 0 0 15px 0;
            font-size: 1.3em;
        }
        .detail-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #ecf0f1;
        }
        .detail-item:last-child {
            border-bottom: none;
        }
        .detail-label {
            font-weight: bold;
            color: #2c3e50;
        }
        .detail-value {
            color: #7f8c8d;
        }
        .status-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
            text-transform: uppercase;
        }
        .status-activa {
            background: #d5f4e6;
            color: #27ae60;
        }
        .status-mantenimiento {
            background: #fef9e7;
            color: #f39c12;
        }
        .status-inactiva {
            background: #fadbd8;
            color: #e74c3c;
        }
        .tipo-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
            text-transform: uppercase;
        }
        .tipo-estandar {
            background: #e3f2fd;
            color: #1976d2;
        }
        .tipo-premium {
            background: #fff3e0;
            color: #f57c00;
        }
        .tipo-vip {
            background: #f3e5f5;
            color: #7b1fa2;
        }
        .tipo-3d {
            background: #e8f5e8;
            color: #2e7d32;
        }
        .tipo-imax {
            background: #fce4ec;
            color: #c2185b;
        }
        .tipo-4dx {
            background: #f1f8e9;
            color: #689f38;
        }
        .equipamiento-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 10px;
            margin-top: 10px;
        }
        .equipamiento-item {
            background: white;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #dee2e6;
            text-align: center;
        }
        .actions {
            text-align: center;
            margin-top: 30px;
        }
        .btn {
            background: #3498db;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 5px;
            font-size: 1em;
            transition: background 0.3s ease;
        }
        .btn:hover {
            background: #2980b9;
        }
        .btn-success {
            background: #27ae60;
        }
        .btn-success:hover {
            background: #229954;
        }
        .btn-danger {
            background: #e74c3c;
        }
        .btn-danger:hover {
            background: #c0392b;
        }
        .btn-secondary {
            background: #95a5a6;
        }
        .btn-secondary:hover {
            background: #7f8c8d;
        }
        .loading {
            text-align: center;
            color: white;
            font-size: 1.2em;
            padding: 40px;
        }
        .error {
            background: #e74c3c;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            margin: 20px 0;
        }
        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.9);
            color: #2c3e50;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
        }
        .funciones-section {
            margin-top: 20px;
        }
        .funcion-item {
            background: white;
            padding: 15px;
            border-radius: 8px;
            margin: 10px 0;
            border: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <a href="/salas" class="back-btn">‚Üê Volver a Salas</a>
    
    <div class="container">
        <div class="header">
            <h1>üè¢ Detalle de Sala</h1>
            <p>Informaci√≥n completa de la sala seleccionada</p>
        </div>

        <div id="salaContainer">
            <div class="loading">
                <p>üîÑ Cargando informaci√≥n de la sala...</p>
            </div>
        </div>
    </div>

    <script>
        const API_BASE = '/api/salas';
        const FUNCIONES_API = '/api/funciones';

        // Obtener ID de la URL
        const salaId = window.location.pathname.split('/').pop();

        async function loadSalaDetail() {
            try {
                const response = await fetch(`${API_BASE}/${salaId}`);
                const data = await response.json();
                
                if (data.success) {
                    displaySalaDetail(data.data);
                    loadFuncionesSala(salaId);
                } else {
                    showError('Error al cargar la sala: ' + data.message);
                }
            } catch (error) {
                showError('Error de conexi√≥n: ' + error.message);
            }
        }

        async function loadFuncionesSala(salaId) {
            try {
                const response = await fetch(`${FUNCIONES_API}/sala/${salaId}`);
                const data = await response.json();
                
                if (data.success) {
                    displayFunciones(data.data);
                }
            } catch (error) {
                console.error('Error al cargar funciones:', error);
            }
        }

        function displaySalaDetail(sala) {
            const container = document.getElementById('salaContainer');
            
            const statusClass = `status-${sala.estado}`;
            const tipoClass = `tipo-${sala.tipo.toLowerCase()}`;
            
            const equipamientoHTML = sala.equipamiento.map(item => 
                `<div class="equipamiento-item">${item}</div>`
            ).join('');

            container.innerHTML = `
                <div class="detail-container">
                    <div class="detail-section">
                        <h3>üìã Informaci√≥n B√°sica</h3>
                        <div class="detail-item">
                            <span class="detail-label">N√∫mero de Sala:</span>
                            <span class="detail-value">${sala.numero}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Tipo:</span>
                            <span class="detail-value">
                                <span class="tipo-badge ${tipoClass}">${sala.tipo}</span>
                            </span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Capacidad:</span>
                            <span class="detail-value">${sala.capacidad} asientos</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Ubicaci√≥n:</span>
                            <span class="detail-value">${sala.ubicacion}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Estado:</span>
                            <span class="detail-value">
                                <span class="status-badge ${statusClass}">${sala.estado}</span>
                            </span>
                        </div>
                    </div>

                    <div class="detail-section">
                        <h3>üé¨ Equipamiento</h3>
                        <div class="equipamiento-list">
                            ${equipamientoHTML}
                        </div>
                    </div>

                    <div class="detail-section">
                        <h3>üìÖ Funciones Programadas</h3>
                        <div id="funcionesContainer">
                            <p>Cargando funciones...</p>
                        </div>
                    </div>

                    <div class="actions">
                        <button class="btn" onclick="editSala(${sala.id})">‚úèÔ∏è Editar Sala</button>
                        <button class="btn btn-danger" onclick="deleteSala(${sala.id})">üóëÔ∏è Eliminar Sala</button>
                        <a href="/salas" class="btn btn-secondary">üìã Ver Todas las Salas</a>
                    </div>
                </div>
            `;
        }

        function displayFunciones(funciones) {
            const container = document.getElementById('funcionesContainer');
            
            if (funciones.length === 0) {
                container.innerHTML = '<p>No hay funciones programadas para esta sala.</p>';
                return;
            }

            container.innerHTML = funciones.map(funcion => `
                <div class="funcion-item">
                    <div class="detail-item">
                        <span class="detail-label">Pel√≠cula:</span>
                        <span class="detail-value">${funcion.pelicula ? funcion.pelicula.titulo : 'No disponible'}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Fecha:</span>
                        <span class="detail-value">${funcion.fecha}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Horario:</span>
                        <span class="detail-value">${funcion.horaInicio} - ${funcion.horaFin}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Precio:</span>
                        <span class="detail-value">$${funcion.precio}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Asientos:</span>
                        <span class="detail-value">${funcion.asientosDisponibles} disponibles de ${funcion.asientosDisponibles + funcion.asientosOcupados}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Estado:</span>
                        <span class="detail-value">
                            <span class="status-badge ${funcion.estado === 'activa' ? 'status-activa' : 'status-mantenimiento'}">${funcion.estado}</span>
                        </span>
                    </div>
                </div>
            `).join('');
        }

        function showError(message) {
            const container = document.getElementById('salaContainer');
            container.innerHTML = `<div class="error">${message}</div>`;
        }

        async function deleteSala(id) {
            if (confirm('¬øEst√°s seguro de que quieres eliminar esta sala?')) {
                try {
                    const response = await fetch(`${API_BASE}/${id}`, {
                        method: 'DELETE'
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Sala eliminada exitosamente');
                        window.location.href = '/salas';
                    } else {
                        alert('Error al eliminar la sala: ' + data.message);
                    }
                } catch (error) {
                    alert('Error al eliminar la sala: ' + error.message);
                }
            }
        }

        function editSala(id) {
            alert('Funcionalidad de edici√≥n pendiente de implementar');
        }

        // Cargar detalles al cargar la p√°gina
        window.onload = function() {
            loadSalaDetail();
        };
    </script>
</body>
</html>

