<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boletos - CineApp</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            color: #2c3e50;
            margin: 0;
            font-size: 2.5em;
        }
        .actions {
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            margin-bottom: 30px;
            text-align: center;
        }
        .btn {
            background: #3498db;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 5px;
            font-size: 1em;
            transition: background 0.3s ease;
        }
        .btn:hover {
            background: #2980b9;
        }
        .btn-success {
            background: #27ae60;
        }
        .btn-success:hover {
            background: #229954;
        }
        .btn-danger {
            background: #e74c3c;
        }
        .btn-danger:hover {
            background: #c0392b;
        }
        .boletos-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .boleto-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            transition: transform 0.3s ease;
        }
        .boleto-card:hover {
            transform: translateY(-5px);
        }
        .boleto-title {
            color: #2c3e50;
            font-size: 1.3em;
            font-weight: bold;
            margin: 0 0 10px 0;
        }
        .boleto-info {
            color: #7f8c8d;
            margin: 5px 0;
        }
        .boleto-info strong {
            color: #34495e;
        }
        .boleto-actions {
            margin-top: 15px;
            text-align: center;
        }
        .loading {
            text-align: center;
            color: white;
            font-size: 1.2em;
            padding: 40px;
        }
        .error {
            background: #e74c3c;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            margin: 20px 0;
        }
        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.9);
            color: #2c3e50;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
        }
        .status-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
            text-transform: uppercase;
        }
        .status-confirmado {
            background: #d5f4e6;
            color: #27ae60;
        }
        .status-usado {
            background: #e3f2fd;
            color: #1976d2;
        }
        .status-cancelado {
            background: #fadbd8;
            color: #e74c3c;
        }
        .qr-code {
            background: #f8f9fa;
            padding: 10px;
            border-radius: 8px;
            margin: 10px 0;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
            color: #2c3e50;
            text-align: center;
            border: 2px dashed #3498db;
        }
    </style>
</head>
<body>
    <a href="/" class="back-btn">‚Üê Volver al Inicio</a>
    
    <div class="container">
        <div class="header">
            <h1>üé´ Boletos</h1>
            <p>Gestiona los boletos vendidos del cine</p>
        </div>

        <div class="actions">
            <button class="btn btn-success" onclick="loadBoletos()">üîÑ Cargar Boletos</button>
            <a href="/boletos/agregar" class="btn">‚ûï Comprar Boleto</a>
        </div>

        <div id="boletosContainer">
            <div class="loading">
                <p>üîÑ Cargando boletos...</p>
                <p>Haz clic en "Cargar Boletos" para ver el cat√°logo</p>
            </div>
        </div>
    </div>

    <script>
        const API_BASE = '/api/boletos';

        async function loadBoletos() {
            try {
                const response = await fetch(API_BASE);
                const data = await response.json();
                
                if (data.success) {
                    displayBoletos(data.data);
                } else {
                    showError('Error al cargar los boletos: ' + data.message);
                }
            } catch (error) {
                showError('Error de conexi√≥n: ' + error.message);
            }
        }

        function displayBoletos(boletos) {
            const container = document.getElementById('boletosContainer');
            
            if (boletos.length === 0) {
                container.innerHTML = '<div class="error">No hay boletos disponibles</div>';
                return;
            }

            container.innerHTML = `
                <div class="boletos-grid">
                    ${boletos.map(boleto => {
                        const statusClass = `status-${boleto.estado}`;
                        
                        return `
                        <div class="boleto-card">
                            <h3 class="boleto-title">Boleto #${boleto.id}</h3>
                            <div class="boleto-info"><strong>Pel√≠cula:</strong> ${boleto.funcion && boleto.funcion.pelicula ? boleto.funcion.pelicula.titulo : 'No disponible'}</div>
                            <div class="boleto-info"><strong>Sala:</strong> ${boleto.funcion && boleto.funcion.sala ? boleto.funcion.sala.numero : 'No disponible'}</div>
                            <div class="boleto-info"><strong>Asiento:</strong> ${boleto.numeroAsiento}</div>
                            <div class="boleto-info"><strong>Precio:</strong> $${boleto.precio}</div>
                            <div class="boleto-info"><strong>Usuario:</strong> ${boleto.usuario ? `${boleto.usuario.nombre} ${boleto.usuario.apellido}` : 'No disponible'}</div>
                            <div class="boleto-info"><strong>Fecha Compra:</strong> ${boleto.fechaCompra} ${boleto.horaCompra}</div>
                            <div class="boleto-info"><strong>M√©todo Pago:</strong> ${boleto.metodoPago}</div>
                            <div class="boleto-info"><strong>Estado:</strong> <span class="status-badge ${statusClass}">${boleto.estado}</span></div>
                            <div class="qr-code">
                                üì± C√≥digo QR:<br>
                                ${boleto.codigoQR}
                            </div>
                            <div class="boleto-actions">
                                <a href="/boletos/${boleto.id}" class="btn">üëÅÔ∏è Ver Detalle</a>
                                <button class="btn" onclick="usarBoleto(${boleto.id})">‚úÖ Usar Boleto</button>
                                <button class="btn btn-danger" onclick="cancelarBoleto(${boleto.id})">‚ùå Cancelar</button>
                            </div>
                        </div>
                    `}).join('')}
                </div>
            `;
        }

        function showError(message) {
            const container = document.getElementById('boletosContainer');
            container.innerHTML = `<div class="error">${message}</div>`;
        }

        async function cancelarBoleto(id) {
            if (confirm('¬øEst√°s seguro de que quieres cancelar este boleto?')) {
                try {
                    const response = await fetch(`${API_BASE}/${id}`, {
                        method: 'DELETE'
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Boleto cancelado exitosamente');
                        loadBoletos(); // Recargar la lista
                    } else {
                        alert('Error al cancelar el boleto: ' + data.message);
                    }
                } catch (error) {
                    alert('Error al cancelar el boleto: ' + error.message);
                }
            }
        }

        async function usarBoleto(id) {
            if (confirm('¬øMarcar este boleto como usado?')) {
                try {
                    const response = await fetch(`${API_BASE}/${id}/usar`, {
                        method: 'PUT'
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Boleto marcado como usado exitosamente');
                        loadBoletos(); // Recargar la lista
                    } else {
                        alert('Error al usar el boleto: ' + data.message);
                    }
                } catch (error) {
                    alert('Error al usar el boleto: ' + error.message);
                }
            }
        }

        // Cargar boletos al cargar la p√°gina
        window.onload = function() {
            loadBoletos();
        };
    </script>
</body>
</html>

