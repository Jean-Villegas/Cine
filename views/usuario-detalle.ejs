<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Usuario - CineApp</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            color: #2c3e50;
            margin: 0;
            font-size: 2.5em;
        }
        .detail-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
        }
        .detail-section {
            margin-bottom: 25px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            border-left: 4px solid #3498db;
        }
        .detail-section h3 {
            color: #2c3e50;
            margin: 0 0 15px 0;
            font-size: 1.3em;
        }
        .detail-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #ecf0f1;
        }
        .detail-item:last-child {
            border-bottom: none;
        }
        .detail-label {
            font-weight: bold;
            color: #2c3e50;
        }
        .detail-value {
            color: #7f8c8d;
        }
        .status-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
            text-transform: uppercase;
        }
        .status-activo {
            background: #d5f4e6;
            color: #27ae60;
        }
        .status-inactivo {
            background: #fadbd8;
            color: #e74c3c;
        }
        .tipo-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
            text-transform: uppercase;
        }
        .tipo-cliente {
            background: #e3f2fd;
            color: #1976d2;
        }
        .tipo-vip {
            background: #f3e5f5;
            color: #7b1fa2;
        }
        .tipo-admin {
            background: #fff3e0;
            color: #f57c00;
        }
        .puntos-display {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 15px;
            text-align: center;
            margin: 20px 0;
        }
        .puntos-number {
            font-size: 3em;
            font-weight: bold;
            margin: 10px 0;
        }
        .actions {
            text-align: center;
            margin-top: 30px;
        }
        .btn {
            background: #3498db;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 5px;
            font-size: 1em;
            transition: background 0.3s ease;
        }
        .btn:hover {
            background: #2980b9;
        }
        .btn-success {
            background: #27ae60;
        }
        .btn-success:hover {
            background: #229954;
        }
        .btn-danger {
            background: #e74c3c;
        }
        .btn-danger:hover {
            background: #c0392b;
        }
        .btn-secondary {
            background: #95a5a6;
        }
        .btn-secondary:hover {
            background: #7f8c8d;
        }
        .loading {
            text-align: center;
            color: white;
            font-size: 1.2em;
            padding: 40px;
        }
        .error {
            background: #e74c3c;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            margin: 20px 0;
        }
        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.9);
            color: #2c3e50;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
        }
        .boletos-section {
            margin-top: 20px;
        }
        .boleto-item {
            background: white;
            padding: 15px;
            border-radius: 8px;
            margin: 10px 0;
            border: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <a href="/usuarios" class="back-btn">‚Üê Volver a Usuarios</a>
    
    <div class="container">
        <div class="header">
            <h1>üë§ Detalle de Usuario</h1>
            <p>Informaci√≥n completa del usuario seleccionado</p>
        </div>

        <div id="usuarioContainer">
            <div class="loading">
                <p>üîÑ Cargando informaci√≥n del usuario...</p>
            </div>
        </div>
    </div>

    <script>
        const API_BASE = '/api/users';
        const BOLETOS_API = '/api/boletos';

        // Obtener ID de la URL
        const usuarioId = window.location.pathname.split('/').pop();

        async function loadUsuarioDetail() {
            try {
                const response = await fetch(`${API_BASE}/${usuarioId}`);
                const data = await response.json();
                
                if (data.success) {
                    displayUsuarioDetail(data.data);
                    loadBoletosUsuario(usuarioId);
                } else {
                    showError('Error al cargar el usuario: ' + data.message);
                }
            } catch (error) {
                showError('Error de conexi√≥n: ' + error.message);
            }
        }

        async function loadBoletosUsuario(usuarioId) {
            try {
                const response = await fetch(`${BOLETOS_API}/usuario/${usuarioId}`);
                const data = await response.json();
                
                if (data.success) {
                    displayBoletos(data.data);
                }
            } catch (error) {
                console.error('Error al cargar boletos:', error);
            }
        }

        function displayUsuarioDetail(usuario) {
            const container = document.getElementById('usuarioContainer');
            
            const statusClass = `status-${usuario.estado}`;
            const tipoClass = `tipo-${usuario.tipoUsuario}`;
            
            // Calcular edad si hay fecha de nacimiento
            let edad = 'No especificada';
            if (usuario.fechaNacimiento) {
                const hoy = new Date();
                const nacimiento = new Date(usuario.fechaNacimiento);
                edad = hoy.getFullYear() - nacimiento.getFullYear();
            }

            container.innerHTML = `
                <div class="detail-container">
                    <div class="puntos-display">
                        <h3>üéØ Puntos Acumulados</h3>
                        <div class="puntos-number">${usuario.puntos}</div>
                        <p>Puntos disponibles para canjear</p>
                    </div>

                    <div class="detail-section">
                        <h3>üë§ Informaci√≥n Personal</h3>
                        <div class="detail-item">
                            <span class="detail-label">Nombre Completo:</span>
                            <span class="detail-value">${usuario.nombre} ${usuario.apellido}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Email:</span>
                            <span class="detail-value">${usuario.email}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Tel√©fono:</span>
                            <span class="detail-value">${usuario.telefono || 'No especificado'}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Fecha de Nacimiento:</span>
                            <span class="detail-value">${usuario.fechaNacimiento || 'No especificada'}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Edad:</span>
                            <span class="detail-value">${edad}</span>
                        </div>
                    </div>

                    <div class="detail-section">
                        <h3>üîê Informaci√≥n de Cuenta</h3>
                        <div class="detail-item">
                            <span class="detail-label">Tipo de Usuario:</span>
                            <span class="detail-value">
                                <span class="tipo-badge ${tipoClass}">${usuario.tipoUsuario}</span>
                            </span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Estado:</span>
                            <span class="detail-value">
                                <span class="status-badge ${statusClass}">${usuario.estado}</span>
                            </span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Fecha de Registro:</span>
                            <span class="detail-value">${usuario.fechaRegistro}</span>
                        </div>
                    </div>

                    <div class="detail-section">
                        <h3>üé´ Boletos Comprados</h3>
                        <div id="boletosContainer">
                            <p>Cargando boletos...</p>
                        </div>
                    </div>

                    <div class="actions">
                        <button class="btn" onclick="editUsuario(${usuario.id})">‚úèÔ∏è Editar Usuario</button>
                        <button class="btn btn-danger" onclick="deleteUsuario(${usuario.id})">üóëÔ∏è Eliminar Usuario</button>
                        <a href="/usuarios" class="btn btn-secondary">üìã Ver Todos los Usuarios</a>
                    </div>
                </div>
            `;
        }

        function displayBoletos(boletos) {
            const container = document.getElementById('boletosContainer');
            
            if (boletos.length === 0) {
                container.innerHTML = '<p>Este usuario no ha comprado boletos a√∫n.</p>';
                return;
            }

            container.innerHTML = boletos.map(boleto => `
                <div class="boleto-item">
                    <div class="detail-item">
                        <span class="detail-label">Boleto #${boleto.id}:</span>
                        <span class="detail-value">${boleto.funcion && boleto.funcion.pelicula ? boleto.funcion.pelicula.titulo : 'Pel√≠cula no disponible'}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Sala:</span>
                        <span class="detail-value">${boleto.funcion && boleto.funcion.sala ? boleto.funcion.sala.numero : 'No disponible'}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Asiento:</span>
                        <span class="detail-value">${boleto.numeroAsiento}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Precio:</span>
                        <span class="detail-value">$${boleto.precio}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Estado:</span>
                        <span class="detail-value">
                            <span class="status-badge ${boleto.estado === 'confirmado' ? 'status-activo' : boleto.estado === 'usado' ? 'status-activo' : 'status-inactivo'}">${boleto.estado}</span>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Fecha Compra:</span>
                        <span class="detail-value">${boleto.fechaCompra} ${boleto.horaCompra}</span>
                    </div>
                </div>
            `).join('');
        }

        function showError(message) {
            const container = document.getElementById('usuarioContainer');
            container.innerHTML = `<div class="error">${message}</div>`;
        }

        async function deleteUsuario(id) {
            if (confirm('¬øEst√°s seguro de que quieres eliminar este usuario?')) {
                try {
                    const response = await fetch(`${API_BASE}/${id}`, {
                        method: 'DELETE'
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Usuario eliminado exitosamente');
                        window.location.href = '/usuarios';
                    } else {
                        alert('Error al eliminar el usuario: ' + data.message);
                    }
                } catch (error) {
                    alert('Error al eliminar el usuario: ' + error.message);
                }
            }
        }

        function editUsuario(id) {
            // Redirigir a formulario de edici√≥n
            window.location.href = `/usuarios/${id}/editar?id=${id}`;
        }

        // Cargar detalles al cargar la p√°gina
        window.onload = function() {
            loadUsuarioDetail();
        };
    </script>
</body>
</html>


