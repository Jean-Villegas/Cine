        }
        .movie-info strong {
            color: #34495e;
        }
        .movie-synopsis {
            color: #7f8c8d;
            font-style: italic;
            margin: 15px 0;
            line-height: 1.5;
        }
        .movie-actions {
            margin-top: 15px;
            text-align: center;
        }
        .loading {
            text-align: center;
            color: white;
            font-size: 1.2em;
            padding: 40px;
        }
        .error {
            background: #e74c3c;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            margin: 20px 0;
        }
        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.9);
            color: #2c3e50;
            padding: 10px 20px;
            border-radius: 8px;
