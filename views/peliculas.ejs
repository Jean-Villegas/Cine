        function displayMovies(movies) {
            const container = document.getElementById('moviesContainer');
            
            if (movies.length === 0) {
                container.innerHTML = '<div class="error">No hay pel√≠culas disponibles</div>';
                return;
            }

            container.innerHTML = `
