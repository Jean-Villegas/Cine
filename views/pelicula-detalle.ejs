<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Pel√≠cula - CineApp</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            color: #2c3e50;
            margin: 0;
            font-size: 2.5em;
        }
        .movie-detail {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
        }
        .movie-title {
            color: #2c3e50;
            font-size: 2em;
            font-weight: bold;
            margin: 0 0 20px 0;
            border-bottom: 3px solid #3498db;
            padding-bottom: 10px;
        }
        .movie-info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }
        .info-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            border-left: 4px solid #3498db;
        }
        .info-section h3 {
            color: #2c3e50;
            margin: 0 0 15px 0;
            font-size: 1.2em;
        }
        .info-item {
            margin: 8px 0;
            color: #7f8c8d;
        }
        .info-item strong {
            color: #2c3e50;
            display: inline-block;
            width: 120px;
        }
        .synopsis {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            border-left: 4px solid #27ae60;
            margin: 20px 0;
        }
        .synopsis h3 {
            color: #2c3e50;
            margin: 0 0 15px 0;
        }
        .synopsis p {
            color: #7f8c8d;
            line-height: 1.6;
            margin: 0;
            font-style: italic;
        }
        .actions {
            text-align: center;
            margin-top: 30px;
        }
        .btn {
            background: #3498db;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 5px;
            font-size: 1em;
            transition: background 0.3s ease;
        }
        .btn:hover {
            background: #2980b9;
        }
        .btn-success {
            background: #27ae60;
        }
        .btn-success:hover {
            background: #229954;
        }
        .btn-danger {
            background: #e74c3c;
        }
        .btn-danger:hover {
            background: #c0392b;
        }
        .btn-secondary {
            background: #95a5a6;
        }
        .btn-secondary:hover {
            background: #7f8c8d;
        }
        .loading {
            text-align: center;
            color: white;
            font-size: 1.2em;
            padding: 40px;
        }
        .error {
            background: #e74c3c;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            margin: 20px 0;
        }
        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.9);
            color: #2c3e50;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
        }
        .status-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
            text-transform: uppercase;
        }
        .status-activa {
            background: #d5f4e6;
            color: #27ae60;
        }
        .status-inactiva {
            background: #fadbd8;
            color: #e74c3c;
        }
    </style>
</head>
<body>
    <a href="/peliculas" class="back-btn">‚Üê Volver a Pel√≠culas</a>
    
    <div class="container">
        <div class="header">
            <h1>üé≠ Detalle de Pel√≠cula</h1>
        </div>

        <div id="movieContainer">
            <div class="loading">
                <p>üîÑ Cargando informaci√≥n de la pel√≠cula...</p>
            </div>
        </div>
    </div>

    <script>
        const API_BASE = '/api/peliculas';
        
        // Obtener ID de la URL
        const pathParts = window.location.pathname.split('/');
        const movieId = pathParts[pathParts.length - 1];

        async function loadMovieDetail() {
            try {
                const response = await fetch(`${API_BASE}/${movieId}`);
                const data = await response.json();
                
                if (data.success) {
                    displayMovieDetail(data.data);
                } else {
                    showError('Error al cargar la pel√≠cula: ' + data.message);
                }
            } catch (error) {
                showError('Error de conexi√≥n: ' + error.message);
            }
        }

        function displayMovieDetail(movie) {
            const container = document.getElementById('movieContainer');
            
            const statusClass = movie.estado === 'activa' ? 'status-activa' : 'status-inactiva';
            
            container.innerHTML = `
                <div class="movie-detail">
                    <h2 class="movie-title">${movie.titulo}</h2>
                    
                    <div class="movie-info-grid">
                        <div class="info-section">
                            <h3>üìã Informaci√≥n B√°sica</h3>
                            <div class="info-item"><strong>Director:</strong> ${movie.director}</div>
                            <div class="info-item"><strong>G√©nero:</strong> ${movie.genero}</div>
                            <div class="info-item"><strong>A√±o:</strong> ${movie.a√±o}</div>
                            <div class="info-item"><strong>Duraci√≥n:</strong> ${movie.duracion} minutos</div>
                            <div class="info-item"><strong>Clasificaci√≥n:</strong> ${movie.clasificacion}</div>
                            <div class="info-item"><strong>Estado:</strong> <span class="status-badge ${statusClass}">${movie.estado}</span></div>
                        </div>
                        
                        <div class="info-section">
                            <h3>üé¨ Detalles T√©cnicos</h3>
                            <div class="info-item"><strong>Idioma:</strong> ${movie.idioma}</div>
                            <div class="info-item"><strong>Subt√≠tulos:</strong> ${movie.subtitulos ? 'S√≠' : 'No'}</div>
                            <div class="info-item"><strong>Formato:</strong> ${movie.formato}</div>
                            <div class="info-item"><strong>Precio:</strong> $${movie.precio}</div>
                            <div class="info-item"><strong>ID:</strong> ${movie.id}</div>
                        </div>
                    </div>
                    
                    <div class="synopsis">
                        <h3>üìñ Sinopsis</h3>
                        <p>${movie.sinopsis}</p>
                    </div>
                    
                    <div class="actions">
                        <a href="/peliculas" class="btn btn-secondary">üìã Ver Todas</a>
                        <button class="btn btn-success" onclick="editMovie(${movie.id})">‚úèÔ∏è Editar</button>
                        <button class="btn btn-danger" onclick="deleteMovie(${movie.id})">üóëÔ∏è Eliminar</button>
                        <button class="btn" onclick="viewFunctions(${movie.id})">‚è∞ Ver Funciones</button>
                    </div>
                </div>
            `;
        }

        function showError(message) {
            const container = document.getElementById('movieContainer');
            container.innerHTML = `<div class="error">${message}</div>`;
        }

        async function deleteMovie(id) {
            if (confirm('¬øEst√°s seguro de que quieres eliminar esta pel√≠cula?')) {
                try {
                    const response = await fetch(`${API_BASE}/${id}`, {
                        method: 'DELETE'
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Pel√≠cula eliminada exitosamente');
                        window.location.href = '/peliculas';
                    } else {
                        alert('Error al eliminar la pel√≠cula: ' + data.message);
                    }
                } catch (error) {
                    alert('Error al eliminar la pel√≠cula: ' + error.message);
                }
            }
        }

        function editMovie(id) {
            alert('Funcionalidad de edici√≥n pendiente de implementar');
        }

        function viewFunctions(id) {
            window.location.href = `/funciones?pelicula=${id}`;
        }

        // Cargar detalles al cargar la p√°gina
        window.onload = function() {
            if (movieId) {
                loadMovieDetail();
            } else {
                showError('ID de pel√≠cula no v√°lido');
            }
        };
    </script>
</body>
</html>