<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Salas - CineApp</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            color: #2c3e50;
            margin: 0;
            font-size: 2.5em;
        }
        .actions {
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            margin-bottom: 30px;
            text-align: center;
        }
        .btn {
            background: #3498db;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 5px;
            font-size: 1em;
            transition: background 0.3s ease;
        }
        .btn:hover {
            background: #2980b9;
        }
        .btn-success {
            background: #27ae60;
        }
        .btn-success:hover {
            background: #229954;
        }
        .btn-danger {
            background: #e74c3c;
        }
        .btn-danger:hover {
            background: #c0392b;
        }
        .salas-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .sala-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            transition: transform 0.3s ease;
        }
        .sala-card:hover {
            transform: translateY(-5px);
        }
        .sala-title {
            color: #2c3e50;
            font-size: 1.3em;
            font-weight: bold;
            margin: 0 0 10px 0;
        }
        .sala-info {
            color: #7f8c8d;
            margin: 5px 0;
        }
        .sala-info strong {
            color: #34495e;
        }
        .sala-equipamiento {
            background: #f8f9fa;
            padding: 10px;
            border-radius: 8px;
            margin: 10px 0;
        }
        .sala-equipamiento h4 {
            color: #2c3e50;
            margin: 0 0 5px 0;
            font-size: 0.9em;
        }
        .sala-equipamiento ul {
            margin: 0;
            padding-left: 20px;
            color: #7f8c8d;
        }
        .sala-actions {
            margin-top: 15px;
            text-align: center;
        }
        .loading {
            text-align: center;
            color: white;
            font-size: 1.2em;
            padding: 40px;
        }
        .error {
            background: #e74c3c;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            margin: 20px 0;
        }
        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.9);
            color: #2c3e50;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
        }
        .status-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
            text-transform: uppercase;
        }
        .status-activa {
            background: #d5f4e6;
            color: #27ae60;
        }
        .status-mantenimiento {
            background: #fef9e7;
            color: #f39c12;
        }
    </style>
</head>
<body>
    <a href="/" class="back-btn">‚Üê Volver al Inicio</a>
    
    <div class="container">
        <div class="header">
            <h1>üè¢ Salas</h1>
            <p>Administra las salas de proyecci√≥n del cine</p>
        </div>

        <div class="actions">
            <button class="btn btn-success" onclick="loadSalas()">üîÑ Cargar Salas</button>
            <a href="/salas/agregar" class="btn">‚ûï Agregar Sala</a>
            <button class="btn" onclick="loadActiveSalas()">‚úÖ Solo Activas</button>
        </div>

        <div id="salasContainer">
            <div class="loading">
                <p>üîÑ Cargando salas...</p>
                <p>Haz clic en "Cargar Salas" para ver el cat√°logo</p>
            </div>
        </div>
    </div>

    <script>
        const API_BASE = '/api/salas';

        async function loadSalas() {
            try {
                const response = await fetch(API_BASE);
                const data = await response.json();
                
                if (data.success) {
                    displaySalas(data.data);
                } else {
                    showError('Error al cargar las salas: ' + data.message);
                }
            } catch (error) {
                showError('Error de conexi√≥n: ' + error.message);
            }
        }

        async function loadActiveSalas() {
            try {
                const response = await fetch(API_BASE + '/activas');
                const data = await response.json();
                
                if (data.success) {
                    displaySalas(data.data);
                } else {
                    showError('Error al cargar las salas activas: ' + data.message);
                }
            } catch (error) {
                showError('Error de conexi√≥n: ' + error.message);
            }
        }

        function displaySalas(salas) {
            const container = document.getElementById('salasContainer');
            
            if (salas.length === 0) {
                container.innerHTML = '<div class="error">No hay salas disponibles</div>';
                return;
            }

            container.innerHTML = `
                <div class="salas-grid">
                    ${salas.map(sala => {
                        const statusClass = sala.estado === 'activa' ? 'status-activa' : 'status-mantenimiento';
                        const equipamientoList = sala.equipamiento.map(item => `<li>${item}</li>`).join('');
                        
                        return `
                        <div class="sala-card">
                            <h3 class="sala-title">${sala.numero}</h3>
                            <div class="sala-info"><strong>Tipo:</strong> ${sala.tipo}</div>
                            <div class="sala-info"><strong>Capacidad:</strong> ${sala.capacidad} asientos</div>
                            <div class="sala-info"><strong>Ubicaci√≥n:</strong> ${sala.ubicacion}</div>
                            <div class="sala-info"><strong>Estado:</strong> <span class="status-badge ${statusClass}">${sala.estado}</span></div>
                            <div class="sala-equipamiento">
                                <h4>üé¨ Equipamiento:</h4>
                                <ul>${equipamientoList}</ul>
                            </div>
                            <div class="sala-actions">
                                <a href="/salas/${sala.id}" class="btn">üëÅÔ∏è Ver Detalle</a>
                                <button class="btn" onclick="editSala(${sala.id})">‚úèÔ∏è Editar</button>
                                <button class="btn btn-danger" onclick="deleteSala(${sala.id})">üóëÔ∏è Eliminar</button>
                            </div>
                        </div>
                    `}).join('')}
                </div>
            `;
        }

        function showError(message) {
            const container = document.getElementById('salasContainer');
            container.innerHTML = `<div class="error">${message}</div>`;
        }

        async function deleteSala(id) {
            if (confirm('¬øEst√°s seguro de que quieres eliminar esta sala?')) {
                try {
                    const response = await fetch(`${API_BASE}/${id}`, {
                        method: 'DELETE'
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Sala eliminada exitosamente');
                        loadSalas(); // Recargar la lista
                    } else {
                        alert('Error al eliminar la sala: ' + data.message);
                    }
                } catch (error) {
                    alert('Error al eliminar la sala: ' + error.message);
                }
            }
        }

        function editSala(id) {
            alert('Funcionalidad de edici√≥n pendiente de implementar');
        }

        // Cargar salas al cargar la p√°gina
        window.onload = function() {
            loadSalas();
        };
    </script>
</body>
</html>

